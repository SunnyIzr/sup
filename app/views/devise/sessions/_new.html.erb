<%= form_for(:user, url: user_session_path) do |f| %>
  <div class='form-element'><%= f.label :email, 'Email Address' %>
  <%= f.email_field :email, autofocus: true, placeholder: 'enter email address' %></div>

  <div class='form-element'><%= f.label :password %>
    <%= f.password_field :password, placeholder: 'enter password', autocomplete: "off" %></div>


  <div><%= f.submit "SIGN IN", class: 'button' %></div>
<% end %>
